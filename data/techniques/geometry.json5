{
    name: "geometry",
    uniforms: [
        { 
            name: "world", 
            type: "cbuffer", 
            properties: [
                { name: "viewproj", type: "f32x4x4" }
            ],
            visibility: "vertex",
        },
        {
            name: "light", 
            type: "cbuffer", 
            properties: [
                { name: "light", type: "f32x3" }
            ],
            visibility: "vertex",
        },
        {
            name: "material",
            type: "cbuffer",
            properties: [
                { name: "color", type: "f32x4" }
            ],
            visibility: "vertex",
        }
    ],
    shaders: [
        {
            type: "vertex",
            inputs: [
                { name: "position", type: "f32x3", semantic: "POSITION" },
            ],
            outputs: [
                { name: "position", type: "f32x4", semantic: "SV_POSITION" },
            ],
            source: "
                vs_output main(vs_input input) {
                    vs_output output;
                    float4 world_pos = float4(input.position, 1.0f);
                    output.position = world_pos;
                    return output;
                }
            "
        },
        {
            type: "pixel",
            inputs: [
                { name: "position", type: "f32x4", semantic: "SV_POSITION" },
            ],
            outputs: [
                { name: "albedo", type: "f32x4", semantic: "SV_TARGET0" },
            ],
            source: "   
                ps_output main(ps_input input) {
                    ps_output output;
                    output.albedo = float4(0.7f, 0.5f, 0.5f, 1.0f);
                    return output;
                }
            "
        }
    ]
}
