{
    name: "geometry",
    uniforms: [
        { 
            name: "world", 
            type: "cbuffer", 
            properties: [
                { name: "model", type: "f32x4x4" },
                { name: "view", type: "f32x4x4" },
                { name: "proj", type: "f32x4x4" },
            ],
            visibility: "vertex",
        }
    ],
    shaders: [
        {
            type: "vertex",
            inputs: [
                { name: "position", type: "f32x3", semantic: "POSITION" },
                { name: "color", type: "f32x3", semantic: "COLOR" }
            ],
            outputs: [
                { name: "position", type: "f32x4", semantic: "SV_POSITION" },
                { name: "color", type: "f32x3", semantic: "COLOR" }
            ],
            source: "
                vs_output main(vs_input input) {
                    vs_output output;
                    float4 world_pos = float4(input.position, 1.0f);

                    world_pos = mul(world_pos, model);
                    world_pos = mul(world_pos, view);

                    output.position = world_pos;
                    output.color = input.color;
                    return output;
                }
            "
        },
        {
            type: "pixel",
            inputs: [
                { name: "position", type: "f32x4", semantic: "SV_POSITION" },
                { name: "color", type: "f32x3", semantic: "COLOR" },
            ],
            outputs: [
                { name: "albedo", type: "f32x4", semantic: "SV_TARGET0" },
            ],
            source: "   
                ps_output main(ps_input input) {
                    ps_output output;
                    output.albedo = float4(input.color, 1.0f);
                    return output;
                }
            "
        }
    ]
}
