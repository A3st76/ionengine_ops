{
    name: "geometry",
    uniforms: [
        { 
            name: "world", 
            type: "cbuffer", 
            declaration: [
                { name: "viewproj", type: "f32x4x4" }
            ],
            location: 0,
            visibility: "vertex"
        },
        {
            name: "material", 
            type: "cbuffer", 
            declaration: [
                { name: "power", type: "f32x3" }
            ],
            location: 1,
            visibility: "vertex"
        },
        {
            name: "albedo",
            type: "sampler2D",
            location: 0,
            visibility: "pixel"
        }
    ],
    shaders: [
        {
            type: "vertex",
            inputs: [
                { name: "position", type: "f32x3", semantic: "POSITION" },
                { name: "color", type: "f32x4", semantic: "COLOR" }
            ],
            outputs: [
                { name: "position", type: "f32x4", semantic: "SV_POSITION" },
                { name: "color", type: "f32x4", semantic: "COLOR" }
            ],
            source: "
                vs_output main(vs_input input) {
    
                    vs_output output;

                    float4 world_pos = float4(input.position, 1.0f);

                    world_pos = mul(world_pos, model);
                    world_pos = mul(world_pos, view);
                    world_pos = mul(world_pos, proj);

                    output.position = world_pos;
                    output.color = input.color;

                    return output;
                }
            "
        },
        {
            type: "pixel",
            inputs: [
                { name: "position", type: "f32x4", semantic: "SV_POSITION" },
                { name: "color", type: "f32x4", semantic: "COLOR" }
            ],
            outputs: [
                { name: "albedo", type: "f32x4", semantic: "SV_TARGET0" },
            ],
            source: "   
                ps_output main(ps_input input) : SV_TARGET {
                    ps_output output;
                    output.albedo = float4(0.2f, 0.1f, 0.5f, 1.0f);
                    return output;
                }
            "
        }
    ]
}
