{
    name: "offscreen",
    uniforms: [
        {
            name: "albedo",
            type: "sampler2D",
            visibility: "pixel",
        }
    ],
    shaders: [
        {
            type: "vertex",
            inputs: [
                { name: "position", type: "f32x2", semantic: "POSITION" },
                { name: "uv", type: "f32x2", semantic: "TEXCOORD0" }
            ],
            outputs: [
                { name: "position", type: "f32x4", semantic: "SV_POSITION" },
                { name: "uv", type: "f32x2", semantic: "TEXCOORD0" }
            ],
            source: "
                vs_output main(vs_input input) {
                    vs_output output;
                    float4 world_pos = float4(input.position, 0.0f, 1.0f);
                    output.position = world_pos;
                    output.uv = input.uv;
                    return output;
                }
            "
        },
        {
            type: "pixel",
            inputs: [
                { name: "position", type: "f32x4", semantic: "SV_POSITION" },
                { name: "uv", type: "f32x2", semantic: "TEXCOORD0" }
            ],
            outputs: [
                { name: "albedo", type: "f32x4", semantic: "SV_TARGET0" },
            ],
            source: "
                ps_output main(ps_input input) {
                    ps_output output;
                    output.albedo = albedo_texture.Sample(albedo_sampler, input.uv);
                    return output;
                }
            "
        }
    ]
}
